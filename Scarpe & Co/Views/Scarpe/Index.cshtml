<div class="container">
    <h2>LE NOSTRE SCARPE</h2>

    @if (Model.Count == 0)
{
    <h3>Non ci sono pesci nel database</h3>
}
else {
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nome</th>
                <th scope="col">Prezzo</th>
                <th scope="col">Descrizione</th>
                <th scope="col">Immagine di Copertina</th>
                <th scope="col">Immagine 1</th>
                <th scope="col">Immagine 2</th>
                <th scope="col">Azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var scarpe in Model)
            {
                <tr>
                    <td>@scarpe.ScarpeId</td>
                    <td>@scarpe.Name</td>
                    <td>@scarpe.Price</td>
                    <td>@scarpe.Descrizione</td>
                    <td>@scarpe.ImmagineDiCopertina</td>
                    <td>@scarpe.Immagine1</td>
                    <td>@scarpe.Immagine2</td>
                    <td scope="col">

                        <a class="btn btn-primary" asp-controller="Scarpe" asp-action="Edit" asp-route-id="@scarpe.ScarpeId">Modifica</a>
                            <a class="btn btn-primary" asp-controller="Scarpe" asp-action="Delete" asp-route-id="">Elimina</a>


                        <a class="btn btn-primary" asp-controller="Scarpe" asp-action="Details" asp-route-id="@scarpe.ScarpeId">Dettagli</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    }
    <a class="btn btn-primary" asp-controller="Scarpe" asp-action="Add">Aggiungi</a>
</div>
